@using GeneralTemplate.Models
@model GroupWrapper

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-sm-4 text-right">
                <a href="/bright_ideas">Bright Ideas</a> | <a href="/logout">Logout</a>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-10 offset-sm-1">
                @foreach(Group group in Model.AllGroups)
                {
                <div class="row">
                    <h1>@group.Planner.Name says: </h1>
                    <textarea id="GroupName" name="GroupName" rows="4" cols="50">@group.GroupName</textarea>
                </div>
                <div class="row">
                    <div class="col-sm-10 offset-sm-3">
                        <h3>People who liked this post:</h3>
                        <table class="table">
                            <th>
                                <tr>
                                    <td>Alias</td>
                                    <td>Name</td>
                                </tr>
                            </th>
                            <tbody>
                                @foreach(RSVP rsvp in group.GuestsAttending)
                                {
                                    <tr>
                                        <td>@rsvp.Guest.Alias</td>
                                        <td>@rsvp.Guest.Name</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                }
            </div>
        </div>
    </div>
</body>
</html>